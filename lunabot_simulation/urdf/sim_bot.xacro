<?xml version="1.0"?>
<robot name="sim_bot"
  xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="common_properties.xacro" />

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/base_link.stl" />
      </geometry>
      <origin xyz="0 0 0.085" rpy="0 0 0" />
      <material name="light_grey" />
    </visual>
    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/base_link.stl" />
      </geometry>
      <origin xyz="0 0 0.085" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="25.0" />
      <origin xyz="0 0 0.085" />
      <inertia ixx="1.3669" ixy="0.0" ixz="0.0" iyy="3.3602" iyz="0.0" izz="4.7271" />
    </inertial>
  </link>

  <gazebo reference="base_link">
    <material>Gazebo/Grey</material>
  </gazebo>

  <link name="ebox_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/ebox_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/ebox_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
    </collision>
  </link>

  <gazebo reference="ebox_link">
    <material>Gazebo/White</material>
  </gazebo>

  <link name="nuc_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/nuc_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="${pi} 0 ${pi}" />
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/nuc_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="${pi} 0 ${pi}" />
    </collision>
  </link>

  <gazebo reference="nuc_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <link name="lidar1_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/lidar1_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 -1.5708" />
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/lidar1_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 -1.5708" />
    </collision>
  </link>

  <link name="blade_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/blade_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <material name="light_grey" />
    </visual>
    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/blade_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="5.0" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0833" ixy="0.0" ixz="0.0" iyy="0.1667" iyz="0.0" izz="0.2333" />
    </inertial>
  </link>

  <gazebo reference="blade_link">
    <material>Gazebo/Grey</material>
  </gazebo>

  <link name="lidar2_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/lidar2_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/lidar2_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
    </collision>
  </link>

  <link name="d456_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/camera_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <material name="camera_grey" />
    </visual>
    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/camera_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
    </collision>
  </link>

  <link name="d456_link_optical"></link>

  <link name="imu_link"></link>

  <link name="front_right_wheel_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/wheel_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0" />
      <material name="green" />
    </visual>
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>

    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/wheel_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0" />
    </collision>
  </link>

  <gazebo reference="front_right_wheel_link">
    <material>Gazebo/DarkGrey</material>
    <mu>1.0</mu>
    <mu2>1.0</mu2>
    <surface>
      <contact>
        <ode>
          <kp>1000000</kp>
          <kd>500</kd>
          <slip1>0.02</slip1>
          <slip2>0.02</slip2>
        </ode>
      </contact>
    </surface>
  </gazebo>

  <link name="front_left_wheel_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/wheel_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="-1.5708 0 0" />
      <material name="green" />
    </visual>
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/wheel_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="-1.5708 0 0" />
    </collision>
  </link>

  <gazebo reference="front_left_wheel_link">
    <material>Gazebo/DarkGrey</material>
    <mu>1.0</mu>
    <mu2>1.0</mu2>
    <surface>
      <contact>
        <ode>
          <kp>1000000</kp>
          <kd>500</kd>
          <slip1>0.02</slip1>
          <slip2>0.02</slip2>
        </ode>
      </contact>
    </surface>
  </gazebo>

  <link name="rear_right_wheel_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/wheel_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0" />
      <material name="green" />
    </visual>
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/wheel_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0" />
    </collision>
  </link>

  <gazebo reference="rear_right_wheel_link">
    <material>Gazebo/DarkGrey</material>
    <mu>1.0</mu>
    <mu2>1.0</mu2>
    <surface>
      <contact>
        <ode>
          <kp>1000000</kp>
          <kd>500</kd>
          <slip1>0.02</slip1>
          <slip2>0.02</slip2>
        </ode>
      </contact>
    </surface>
  </gazebo>

  <link name="rear_left_wheel_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/wheel_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="-1.5708 0 0" />
      <material name="green" />
    </visual>
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <mesh filename="file:///$(find lunabot_simulation)/meshes/wheel_link.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="-1.5708 0 0" />
    </collision>
  </link>

  <gazebo reference="rear_left_wheel_link">
    <material>Gazebo/DarkGrey</material>
    <mu>1.0</mu>
    <mu2>1.0</mu2>
    <surface>
      <contact>
        <ode>
          <kp>1000000</kp>
          <kd>500</kd>
          <slip1>0.02</slip1>
          <slip2>0.02</slip2>
        </ode>
      </contact>
    </surface>
  </gazebo>

  <joint name="base_rear_right_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="rear_right_wheel_link" />
    <origin xyz="-0.19 -0.25 0.085" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="base_rear_left_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="rear_left_wheel_link" />
    <origin xyz="-0.19 0.25 0.085" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="base_front_right_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="front_right_wheel_link" />
    <origin xyz="0.28 -0.25 0.085" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="base_front_left_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="front_left_wheel_link" />
    <origin xyz="0.28 0.25 0.085" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="base_lidar1_joint" type="fixed">
    <parent link="base_link" />
    <child link="lidar1_link" />
    <origin xyz="0 0 0.405" rpy="0 0 0" />
  </joint>

  <joint name="base_lidar2_joint" type="fixed">
    <parent link="base_link" />
    <child link="lidar2_link" />
    <origin xyz="-0.3630625 0 0.12" rpy="0 0 ${pi}" />
  </joint>

  <joint name="base_ebox_joint" type="fixed">
    <parent link="base_link" />
    <child link="ebox_link" />
    <origin xyz="0.015 0 0.365" rpy="0 0 0" />
  </joint>

  <joint name="base_nuc_joint" type="fixed">
    <parent link="base_link" />
    <child link="nuc_link" />
    <origin xyz="-0.135 0.0 0.3" rpy="0 0 0" />
  </joint>

  <joint name="base_blade_joint" type="revolute">
    <parent link="base_link" />
    <child link="blade_link" />
    <origin xyz="0.55 0.0 0.1" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="100" velocity="1.0" lower="-0.75" upper="0.75" />
    <dynamics damping="0.0" friction="0.0" />
  </joint>

  <joint name="base_d456_joint" type="fixed">
    <parent link="base_link" />
    <child link="d456_link" />
    <origin xyz="0.1602565 0 0.8" rpy="0 0 0" />
  </joint>

  <joint name="d456_optical_joint" type="fixed">
    <parent link="d456_link" />
    <child link="d456_link_optical" />
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708" />
  </joint>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <gazebo reference="d456_link">
    <sensor type="depth" name="d456">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>2</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.05</near>
          <far>10.0</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <ros>
          <remapping>/d456/image_raw:=/d456/color/image_raw</remapping>
          <remapping>/d456/points:=/d456/color/points</remapping>
          <remapping>/d456/camera_info:=/d456/color/camera_info</remapping>
          <remapping>/d456/depth/image_raw:=/d456/depth/image_rect_raw</remapping>
          <update_rate>30.0</update_rate>
        </ros>
        <frame_name>d456_link_optical</frame_name>
      </plugin>
    </sensor>
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="lidar1_link">
    <sensor type="ray" name="lidar1_link">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>50.0</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1080</samples>
            <resolution>0.5</resolution>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>10.0</max>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="lidar1_controller" filename="libgazebo_ros_ray_sensor.so">        <!-- GPU plugin for performance -->
        <frame_name>lidar1_link</frame_name>
        <ros>
          <remapping>~/out:=/scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
      </plugin>
    </sensor>
    <material>Gazebo/Black</material>
  </gazebo>


  <gazebo reference="lidar2_link">
    <sensor type="ray" name="lidar2_link">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>50.0</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1080</samples>
            <resolution>0.5</resolution>
            <min_angle>-1.57</min_angle>
            <max_angle>1.57</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>10.0</max>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="lidar2_controller" filename="libgazebo_ros_ray_sensor.so">
        <frame_name>lidar2_link</frame_name>
        <ros>
          <remapping>~/out:=/scan2</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
      </plugin>
    </sensor>
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="imu_link">
    <gravity>false</gravity>
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>50</update_rate>
      <visualize>true</visualize>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <ros>
          <namespace></namespace>
          <remapping>~/out:=/imu/data_raw</remapping>
        </ros>
        <bodyName>base_link</bodyName>
        <updateRateHZ>100.0</updateRateHZ>
        <gaussianNoise>0.0</gaussianNoise>
        <xyzOffset>0 0 0</xyzOffset>
        <rpyOffset>0 0 0</rpyOffset>
        <frameName>imu_link</frameName>
        <initialOrientationAsReference>false</initialOrientationAsReference>
      </plugin>
      <pose>0 0 0 0 0 0</pose>
    </sensor>
  </gazebo>

  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="base_blade_joint">
      <command_interface name="position" />
      <state_interface name="position" />
      <state_interface name="velocity" />
    </joint>
    <joint name="base_front_right_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="base_front_left_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="base_rear_right_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="base_rear_left_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <robot_param>robot_description</robot_param>
      <robot_param_node>robot_state_publisher</robot_param_node>
      <parameters>$(find lunabot_config)/params/sim_params.yaml</parameters>
    </plugin>
  </gazebo>

  <transmission name="transmission_base_blade_joint">
    <plugin>transmission_interface/SimpleTransmission</plugin>
    <actuator name="actuator_base_blade_joint" role="actuator_base_blade_joint" />
    <joint name="base_blade_joint" role="base_blade_joint">
      <mechanical_reduction>1.0</mechanical_reduction>
    </joint>
  </transmission>
</robot>